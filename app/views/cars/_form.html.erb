<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@car) do |f| %>
      <% if @car.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            The form contains <%= pluralize(@car.errors.count, "error") %>.
          </div>
          <ul>
          <% @car.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    
      <%= f.label :licensePlateNumber %>
      <%= f.text_field :licensePlateNumber %>

      <%= f.label :manufacturer %>
      <%= f.text_field :manufacturer %>

      <%= f.label :model %>
      <%= f.text_field :model %>

      <%= f.label :hourlyRentalRate %>
      <%= f.text_field :hourlyRentalRate %>
      
      <%= f.label :style %>
      <%= f.select :style, [[:Sedan, :Sedan], [:Coupe, :Coupe], [:SUV, :SUV]], {:prompt => "Please select car status"} %>
      
      <%= f.label :location %>
      <%= f.text_field :location %>
      
      <%= f.label :status %>
      <%= f.select :status, [[:CheckedOut, :CheckedOut], [:Available, :Available]], {:prompt => "Please select car status"} %> 

      <%= f.submit "Submit car info", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>