<% provide(:title, @car.manufacturer+' - '+@car.model) %>

<h1>
  <%= @car.manufacturer %>
</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="car_info">
        <%= @car.model %><br>
        <%= @car.licensePlateNumber %><br>
        <%= '%.2f' % @car.hourlyRentalRate %><br>
        <%= @car.style %><br>
        <%= @car.location %><br>
        <%= @car.status %><br>
      
    </section>
  </aside>
</div>


<% if @car.isAvailable? %>
  <%= link_to 'Reserve', new_reservation_path(:param1 => @car.id) %> |
<% end %>
<% if isAdmin? || isSuperAdmin? %>
  <%= link_to 'Edit', edit_car_path(@car) %> |
  <%= link_to "Delete", @car, method: :delete, data: { confirm: "Delete this car?" } %> |
<% end %>
<%= link_to 'List', cars_path %> |
<%= link_to 'Back', :back %>
